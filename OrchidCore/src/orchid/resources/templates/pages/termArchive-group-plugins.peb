{% extends 'includes/termArchive-group-baseLinked' %}

{% block cardBody %}
<div class="plugin-preview">
    <div class="summary">
        <div class="title">{{ page.title }}</div>
        <div class="description">{{ page.description }}</div>
    </div>
    {% set previewImage = page.images|first %}
    <img class="img-responsive" src="{{ previewImage.src }}" alt="{{ previewImage.title }}">
</div>
{% endblock %}
